[user]
	name = Vihang Mehta
	email = vihang@cs.brown.edu
[github]
	user = vihangm
[color]
	ui = true
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow
	frag = magenta
	old = red
	new = green
	whitespace = red reverse
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[core]
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
[merge]
	tool = gmeld
[alias]
	co = checkout
	br = branch
	st = status
[push]
	default = simple
[commit]
	gpgsign = true
